# LLM Provider: anthropic or openai
LLM_PROVIDER=anthropic

# API Keys - set the one for your chosen provider
ANTHROPIC_API_KEY=sk-ant-your-key-here
# OPENAI_API_KEY=sk-your-key-here

# Model names (optional - defaults shown)
# ANTHROPIC_MODEL=claude-sonnet-4-20250514
# OPENAI_MODEL=gpt-4o

# Browser settings
USER_DATA_DIR=./profiles/default
HEADLESS=false
BROWSER_TIMEOUT=30000
VIEWPORT_WIDTH=1280
VIEWPORT_HEIGHT=900

# Agent settings
MAX_STEPS=50
MAX_RETRIES=3
QUERY_DOM_LIMIT=12
MAX_HISTORY_STEPS=10

# Output
OUTPUT_RUNS_DIR=./runs

# Timing
DEFAULT_WAIT_TIMEOUT=2.0
ACTION_DELAY=0.5

# Context limits
MAX_OBSERVATION_LENGTH=2000
MAX_DOM_TEXT_LENGTH=200
